{
    "name": "__MSG_extensionName__",
    "description": "__MSG_extensionDescription__",
    "author": "Guido Schalkx",
    "version": "<%= version =>",
    "manifest_version": 2,

    "icons": {
        "16": "icons/icon-16.svg",
        "24": "icons/icon-24.svg",
        "32": "icons/icon-32.svg",
        "48": "icons/icon-48.svg",
        "64": "icons/icon-64.svg",
        "96": "icons/icon-96.svg",
        "128": "icons/icon-128.svg"
    },

    "default_locale": "en",

    "permissions": [
        "<all_urls>", "webRequest", "webRequestBlocking", "storage", "tabs"
    ],

    "incognito": "spanning",

    "background": {
        "scripts": [ "javascript/background.js" ]
    },

    "web_accessible_resources": [
        "redirect.html"
    ],

    "browser_action": {
        "default_icon": {
            "16": "icons/icon-16.svg",
            "32": "icons/icon-32.svg"
        },
        "default_title": "__MSG_popupTitle__",
        "default_popup": "popup.html",
        "theme_icons": [{
           "light": "icons/icon-16-light.svg",
           "dark": "icons/icon-16.svg",
           "size": 16
       }, {
           "light": "icons/icon-32-light.svg",
           "dark": "icons/icon-32.svg",
           "size": 32
       }]
    },

    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
    },

	"applications": {
		"gecko": {
			"id": "impulseblocker@glkx.nl"
		}
	}
}
